@model GameForge.Models.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Shopping Cart
    <div class="collectables-info">
        <p><strong>Total Collectables :</strong> @Model.TotalCollectables</p>
    </div>
</h2>
@if (Model.CartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Game</th>
                <th>Price</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.game.Title</td>
                    <td>@item.game.Price.ToString("C")</td>
                    <td>
                        <form method="post" action="@Url.Action("RemoveGame", "Cart")">
                            <input type="hidden" name="cartId" value="@item.CartID" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <h3>  Total Price: @Model.TotalPrice.ToString("C")</h3>
    </div>

    <form method="post" action="@Url.Action("Checkout", "Cart")">
        <button type="submit" class="btn btn-primary">Checkout</button>
    </form>
}
else
{
    <p>Your cart is empty.</p>
}
